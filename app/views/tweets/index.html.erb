<h1>Tweets</h1>
<div class="container"  >
  <div id="new-tweet-link">
    <%= link_to '新規ツイートを作成する', new_tweet_path %>
  </div>
  <div class="row">
    <% @tweets.each do |tweet| %>
      <div class="col-xs-12 col-md-6 blog-panel">
        <h2 class="tweetAccount"><%= tweet.user %></h2>
        <p class="tweetContent"><%= tweet.content %></p>
        <div class="tweet-links">
          <%= link_to 'Show', blog, class:'btn btn-default' %>
          <%= link_to 'Edit', edit_tweet_path(tweet), class:'btn btn-info' %>
          <%= link_to 'Destroy', blog, method: :delete, data:{confirm:'Are you sure?'}, class:'btn btn-danger' %>
        </div>
      </div>
    <% end %>
  </div>
</div>