<%= form_with(model: @tweet, local: true) do |form| %>
  <% if @tweet.errors.any? %>
    <div id="error_explanation">
      <h2><%= @tweet.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @tweet.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <table>
    <tr class="tweet_content">
      <td><%= form.label :content %></td>
      <td><%= form.text_area :content, :size => "30x5" %></td>
    </tr>
  </table>
  <%= form.submit %>
<% end %>
<%= link_to "一覧画面にもどる", tweets_path %>